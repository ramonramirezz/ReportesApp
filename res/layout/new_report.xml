<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="10dp"
     >
     
    <!-- Ubicacion -->
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        
         <TextView 
	    	android:id="@+id/tvUbicacion"
	    	android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:fontFamily="sans-serif-condensed"
	    	android:text="Ubicaci贸n: "
	    	android:textColor="#6E6E6E"
	    	android:textSize="18dp"
	    	android:layout_marginTop="5dp"
	    />
   		 <EditText 
        	android:id="@+id/etUbicacion"
        	android:layout_width="fill_parent"
        	android:layout_height="wrap_content"
        	android:hint="Escriba la ubicaci贸n"
        	android:fontFamily="sans-serif-condensed"
        	android:textSize="12dp"
        	android:gravity="center"
        	/>
        
    </LinearLayout>
    <!-- Tipo -->
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        
         <TextView 
	    	android:id="@+id/tvTipo"
	    	android:layout_width="wrap_content"
	    	android:layout_height="wrap_content"
	    	android:fontFamily="sans-serif-condensed"
	    	android:text="Tipo de servicio: "
	    	android:textColor="#6E6E6E"
	    	android:textSize="18dp"
	    	android:layout_marginTop="5dp"
	    />
   		 <Spinner
       		android:id="@+id/spinner1"
        	android:layout_width="match_parent"
        	android:layout_height="wrap_content"
        	
         />
        
    </LinearLayout>
    <!-- Tipo -->
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        
         <TextView 
	    	 android:id="@+id/tvDescrip"
	    	 android:layout_width="wrap_content"
	    	 android:layout_height="wrap_content"
	    	 android:fontFamily="sans-serif-condensed"
	    	 android:text="Descripci贸n: "
	    	 android:textColor="#6E6E6E"
	    	 android:textSize="18dp"
	    	 android:layout_marginTop="5dp"
	     />
   		 <EditText 
   		     android:id="@+id/etDescrip"
   		     android:layout_height="wrap_content"
   		     android:layout_width="fill_parent"
   		     android:fontFamily="sans-serif-condensed"
   		     android:textColor="#6E6E6E"
	    	 android:textSize="12dp"
	    	 android:hint="Escriba descripci贸n"
	    	 android:gravity="center"
   		     />
        
    </LinearLayout>
	<Button 
	    android:id="@+id/btnCrear"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:fontFamily="sans-serif-condensed"
	    android:background="#3775B7"
        android:text="Crear"
        android:textColor="#FFFFFF"
        android:layout_marginTop="10dp"
	    />
</LinearLayout>
